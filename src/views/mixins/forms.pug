- const getInputName = (f, property) => `${f.name}[${property}]`

mixin input(f, property, options = { as: 'text' })
  - const value = f.object[property] === undefined ? '' : f.object[property]
    .mt-3.form-group.col-lg-4.mx-auto(class=(f.errors[property] && 'has-danger'))
      input(name=getInputName(f, property) class='form-control' type=options['as'] value=`${value}` placeholder = `${property}`)
      if f.errors[property]
        .form-control-feedback= f.errrors[property].map(({ message }) => message).join('. ')

mixin button(f, value, type='submit')
  .col-lg-4.mx-auto
      .form-group
          input(class='btn btn-outline-success btn-block' type=`${type}` value=`${value}`)